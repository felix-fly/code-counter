{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "babel",
    "react"
  ],

  "globals": {
    "document": false,
    "window": false
  },

  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-array-index-key": 0,
    "react/prefer-stateless-function": 0
  }
}
